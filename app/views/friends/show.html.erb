<div class="jumbotron">
  <h1 class="display-4">
  <%= @friend.first_name %>
  <%= @friend.last_name %>
  </h1>

  <p class="lead">
  <%= @friend.phone %> |
  <%= @friend.email %> |
  <%= @friend.twitter %>
  </p>

  <br/>

  <p class="lead">
    <%= link_to 'Edit', edit_friend_path(@friend), class:"btn btn-outline-dark btn-sm" %>
    <%= link_to 'Delete', @friend, class:"btn btn-danger btn-sm", method: :delete, data: { confirm: 'Are you sure?' } %>
    <%= link_to 'Back', friends_path, class:"btn btn-secondary btn-sm" %>    
  </p>
</div>



